    "next": "16.0.3",
    "next-nprogress-bar": "^2.4.7",
    "papaparse": "^5.5.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-markdown": "^10.1.0",
    "react-player": "^3.4.0",
